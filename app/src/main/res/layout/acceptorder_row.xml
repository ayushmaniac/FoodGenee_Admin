<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/acceptOrderUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="20dp"
                android:text="Ayush Shrivastava"/>


            <TextView
                android:id="@+id/acceptOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: ABCDEFGHJ"
                android:textStyle="italic"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/acceptOrderUserName"/>


            <TextView
                android:id="@+id/acceptOrderAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/acceptOrderId"
                android:layout_marginLeft="20dp"
                android:text="Order Amount Total : Rs 500"/>



            <TextView
                android:id="@+id/acceptOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/acceptOrderAmount"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="29 December 2019 - 15:12"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textStyle="bold"
                android:id="@+id/acceptOrderRandomText"
                android:layout_marginLeft="20dp"
                android:textSize="30dp"
                android:layout_below="@id/acceptOrderDate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TB1"
                android:textStyle="bold"
                android:id="@+id/acceptOrderTableNo"
                android:layout_marginLeft="20dp"
                android:textSize="30dp"
                android:layout_below="@id/acceptOrderRandomText"/>


            <TextView
                android:id="@+id/newOrderPaidStatusText"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Paid Status"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/acceptOrderTableNo"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/acceptOrderSwitch"
                android:layout_height="wrap_content"
                android:layout_below="@id/newOrderPaidStatusText"/>


            <Button
                android:id="@+id/acceptOrderDeliverButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/acceptOrderSwitch"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorAccent"
                android:padding="10dp"
                android:text="Deliver"
                android:textColor="@color/white" />





        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>